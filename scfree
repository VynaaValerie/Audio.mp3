<!DOCTYPE html>
<html>
<head>
  <title>IP Link</title>
  <script type="text/javascript">
    function showIP() {
      fetch('https://api.ipify.org?format=json')
      .then(response => response.json())
      .then(data => {
        var ipAddress = data.ip;
        document.getElementById('ipAddress').innerText = ipAddress;
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
    
    function copyIP() {
      var ipAddress = document.getElementById('ipAddress').innerText;
      navigator.clipboard.writeText(ipAddress)
      .then(() => {
        alert("IP Address copied to clipboard: " + ipAddress);
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
    
    // Panggil showIP() saat halaman dimuat
    window.onload = function() {
      showIP();
    };
  </script>
</head>
<body>
  <div>IP Address: <span id="ipAddress"></span></div>
  <button onclick="copyIP()">Salin IP</button>
</body>
</html>
